<h1><%= title %></h1>

<!-- Flash messages -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<section class="container">
  <p>
    Classification name must contain only letters and numbers
    (no spaces or special characters).
  </p>

  <form
    id="addClassificationForm"
    action="/inv/add-classification"
    method="post"
  >
    <div class="form-row">
      <label for="classification_name">Classification Name</label>
      <input
        type="text"
        id="classification_name"
        name="classification_name"
        required
        pattern="^[A-Za-z0-9]+$"
        title="Letters and numbers only, no spaces or special characters."
        value="<%= classification_name ? classification_name : '' %>"
      >
    </div>

    <button type="submit" class="btn primary">
      Add Classification
    </button>
  </form>
</section>
