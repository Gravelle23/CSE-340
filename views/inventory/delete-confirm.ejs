<h1><%= title %></h1>

<!-- Flash messages -->
<%- messages() %>

<p class="notice">
  Confirm deletion. The delete is permanent and cannot be undone.
</p>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<section class="container">
  <form id="deleteInventoryForm" action="/inv/delete" method="post">
    <div class="form-row">
      <label for="inv_make">Make</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        readonly
        value="<%= inv_make %>"
      >
    </div>

    <div class="form-row">
      <label for="inv_model">Model</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        readonly
        value="<%= inv_model %>"
      >
    </div>

    <div class="form-row">
      <label for="inv_year">Year</label>
      <input
        type="number"
        id="inv_year"
        name="inv_year"
        readonly
        value="<%= inv_year %>"
      >
    </div>

    <div class="form-row">
      <label for="inv_price">Price</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        readonly
        value="<%= inv_price %>"
      >
    </div>

    <div class="form-row">
      <label for="inv_miles">Miles</label>
      <input
        type="number"
        id="inv_miles"
        name="inv_miles"
        readonly
        value="<%= inv_miles %>"
      >
    </div>

    <div class="form-row">
      <label for="inv_color">Color</label>
      <input
        type="text"
        id="inv_color"
        name="inv_color"
        readonly
        value="<%= inv_color %>"
      >
    </div>

    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <button type="submit" class="btn danger">
      Delete Vehicle
    </button>

    <a href="/inv/" class="btn secondary" style="margin-left: 1rem;">
      Cancel
    </a>
  </form>
</section>
