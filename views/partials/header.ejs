<header id="top-header" class="container">
  <h1 class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </h1>

  <nav id="tools">
    <% if (locals.loggedin && locals.accountData) { %>

      <a href="/account/" title="Go to your account">
        Welcome <%= locals.accountData.account_firstname %>
      </a>

      <a href="/account/logout" title="Log out">
        Logout
      </a>

    <% } else { %>

      <a title="Click to log in" href="/account/login">My Account</a>

    <% } %>
  </nav>
</header>
